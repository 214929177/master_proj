<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="cn.edu.hfut.lilei.shareboard">

    <uses-permission android:name="android.permission.INTERNET"/>
    <!--获取网络状态的权限-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.READ_CALENDAR"/>
    <uses-permission android:name="android.permission.WRITE_CALENDAR"/>

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <!--在SD卡中创建与删除文件权限-->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/NoActionBarTheme"
        >

        <activity
            android:name=".activity.WelcomeActivity"
            android:theme="@style/WelcomeTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".activity.RegisterActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".activity.ResetPasswordActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".activity.SetUserInfoActivity"/>
        <activity android:name=".activity.JoinMeetingActivity"/>
        <activity
            android:name=".activity.MeetingActivity"
            android:screenOrientation="landscape"
            android:theme="@style/MeetingTheme"/>
        <activity android:name=".activity.ArrangeOrHostMeetingActivity"/>
        <activity android:name=".activity.MeetingInfoActivity"/>
        <activity
            android:name=".activity.SettingsMyInfoActivity"
            android:windowSoftInputMode="adjustPan"
            />
        <activity
            android:name=".activity.AlterPasswordActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".activity.ArrangeMeetingActivity"
            android:windowSoftInputMode="adjustPan"
            />
        <activity
            android:name=".activity.PermissionActivity"
            android:theme="@style/NoDisplay"
            />
        <activity
            android:name=".activity.MainActivity"
            android:windowSoftInputMode="adjustPan"
            />
        <activity
            android:name=".activity.MyMeetingActivity"
            />
        <activity
            android:name=".activity.SettingsMeetingActivity"
            android:windowSoftInputMode="adjustPan"
            />
        <activity
            android:name=".activity.SettingsAboutActivity"
            />


    </application>

</manifest>